{% extends "::Seguridad/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
<div class="container" style="margin-top:40px">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <center><strong> Nueva Contrase&ntilde;a</strong></center>
                </div>
                <div class="panel-body">
                    <form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" method="POST" class="fos_user_resetting_request">
                        <fieldset>
                            <div class="row">
                                <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                    <div class="form-group">
                                        <span class="">
											{#<i class="glyphicon glyphicon-lock"></i>   <strong>{{ 'Nueva Contraseña: '|trans }}</strong>#}
										</span>
                                        <div class="input-group">
                                            {{ form_row(form.plainPassword) }}
                                            {#<input type="text" id="pass1" name="pass1" required="required" class="form-control"/>#}
                                        </div>
                                        <span class="">
											{#<i class="glyphicon glyphicon-lock"></i>   <strong>{{ 'Repita Contraseña: '|trans }}</strong>#}
										</span>
                                        <div class="input-group">
                                            {{ form_row(form.plainPassword) }}
                                            {#<input type="text" id="pass2" name="pass2" required="required" class="form-control"/>#}
                                        </div>
                                    </div>
                                    <input class="btn btn-primary" type="submit" value="{{ 'Confirmar'|trans }}"
                                           style="margin: 0 auto" />
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
    {{ form_errors(form) }}
    {{ form_widget(form.plainPassword) }}
    {{ form_row(form.plainPassword) }}

{% endblock fos_user_content %}
