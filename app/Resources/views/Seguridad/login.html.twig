{% extends "::Seguridad/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}


<div class="row">
    <center>
    <div class="center-block">
        <img src="{{ asset('img/podonet_logo.png') }}" />
    </div>
    </center>
</div>

<div class="container" style="margin-top:40px">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <center><strong> Ingresar en Podonet</strong></center>
                </div>
                <div class="panel-body">
                    <form action="{{ path("fos_user_security_check") }}" method="post">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        <fieldset>
                            <div class="row">
                                <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                    <div class="form-group">
                                        <div class="input-group">
												<span class="input-group-addon">
													<i class="glyphicon glyphicon-user"></i>
												</span>
                                            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" placeholder="Usuario" autofocus/>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group">
												<span class="input-group-addon">
													<i class="glyphicon glyphicon-lock"></i>
												</span>
                                            <input type="password" class="form-control" placeholder="Contraseña" id="password" name="_password" required="required" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                                        <label for="remember_me">Recuerdame</label>
                                        <input type="submit" id="_submit" name="_submit" value="Ingresar" class="btn btn-lg btn-primary btn-block" />
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
                <div class="panel-footer ">
                    ¿No puedes acceder? <a href="{{ path("fos_user_resetting_request") }}" onClick=""> Pulsa aqu&iacute; </a>
                </div>
            </div>
        </div>

        {% endblock fos_user_content %}
