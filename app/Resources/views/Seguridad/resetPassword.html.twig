{% extends "::Seguridad/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

<div class="container" style="margin-top:40px">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <center><strong> Restablecer Contrase&ntilde;a</strong></center>
                </div>
                <div class="panel-body">
                    <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
                        <fieldset>
                            <div class="row">
                                <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                    <div class="form-group">
                                        <span class="">
											<i class="glyphicon glyphicon-user"></i>   <strong>{{ 'Nombre de usuario: '|trans }}</strong>
										</span>
                                        <div class="input-group">
                                            {% if invalid_username is defined %}
                                                <p>{{ 'Nombre de usuario inválido'|trans({'%username%': invalid_username}) }}</p>
                                            {% endif %}

                                            <input type="text" id="username" name="username" required="required" class="form-control"/>
                                        </div>
                                    </div>
                                    <div class="well">
                                        <i class="glyphicon glyphicon-question-sign"></i>  Recibir&aacute; un mensaje en el correo electrónico indicado por el nombre usuario para restabecer su contrase&ntilde;a
                                        <br><br><input class="btn btn-primary" type="submit" value="{{ 'Enviar mail'|trans }}"
                                                       style="margin: 0 auto" />
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>


