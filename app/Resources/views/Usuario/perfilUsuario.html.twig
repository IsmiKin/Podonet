{% extends "Usuario/plantillaPerfil.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/usuario/perfil/consultarPerfil.css') }}"/>
{% endblock %}

{% block contenidoPerfil %}

<div class="row">

    <!-- Informacion de Cuenta -->

        <div class="list-group ">
            <a href="#" class="list-group-item active  ">
                <i class="fa fa-lock fa-2x" ></i>  <span class="tituloPanel">Datos de cuenta</span>
            </a>

            <a href="#" class="list-group-item"  >
                <strong>Nombre de usuario :</strong> {{ app.user.username }}
            </a>
            <a href="#" class="list-group-item"  >
                <strong>Rol :</strong>
                {% if     "ROLE_SUPER_ADMIN" in app.user.roles %} Administrador
                {% elseif "ROLE_ADMIN" in app.user.roles %}  Administrador
                {% elseif "ROLE_SECRETARIO" in app.user.roles %}  Secretario
                {% elseif "ROLE_PODOLOGO" in app.user.roles %}  Pod&oacute;logo
                {% elseif "ROLE_PIR" in app.user.roles %}  PIR
                {% endif %}
            </a>
            <a href="#" class="list-group-item"  >
                <strong>Email :</strong>  {{ app.user.email }}
            </a>

        </div>


    <!-- Fin informacion de Cuenta -->

    <!-- Datos Personales -->


        <div class="list-group ">
            <a class="list-group-item list-group-item-success active  ">
                <i class="fa fa-user fa-2x" ></i>  <span class="tituloPanel">Datos Personales</span>
                <span class="containerBotonEditarDatosPersonales">
                    <button class="btn btn-default botonTitle showFormEditar" data-informacion="DatosPersonales">
                        <i class="fa fa-pencil"></i> Editar
                    </button>
                </span>
                <span class="containerBotonAplicarCambiosDatosPersonales">
                    <button type="submit" class="btn btn-default botonTitle ApplyFormEditar" form="formDatosPersonales">
                        <i class="fa fa-pencil"></i> Aplicar
                    </button>
                </span>
                <span class="containerBotonCancelarDatosPersonales" hidden="hidden">
                    <button class="btn btn-default botonTitle cancelFormEditar" data-informacion="DatosPersonales" >
                        <i class="fa fa-minus-circle"></i> Cancelar
                    </button>
                </span>
            </a>

            <span id="informacionDatosPersonales">
                <a class="list-group-item"  >
                    <strong>Nombre:</strong> {{ app.user.Nombre}}
                </a>
                <a class="list-group-item"  >
                    <strong>Apellidos :</strong> {{ app.user.Apellidos}}
                </a>
                <a class="list-group-item"  >
                    <strong>Tel&eacute;fono :</strong>  {{ app.user.Telefono }}
                </a>
            </span>
            <span id="formularioDatosPersonales" >
                <form id="formDatosPersonales" method="POST" action="{{ path('editar_perfil') }}">
                    <a class="list-group-item"  >
                        <strong>Nombre:</strong> <input type="text" class="form-control"
                                                        name="nombre"
                                                        value="{{ app.user.Nombre}}">
                    </a>
                    <a class="list-group-item"  >
                        <strong>Apellidos:</strong> <input type="text" class="form-control"
                                                        name="apellidos"
                                                        value="{{ app.user.Apellidos}}">
                    </a>
                    <a class="list-group-item" >
                        <strong>Tel&eacute;fono:</strong> <input type="text" class="form-control"
                                                        name="telefono"
                                                        value="{{ app.user.Telefono}}">
                    </a>

                    <div hidden="hidden" >
                        {{ form_row(formEditarDP.username, { 'attr': {'class': 'hide'} }) }}
                        {{ form_row(formEditarDP.email, { 'attr': {'class': 'hide'} }) }}
                    </div>
                </form>
            </span>

        </div>

    <!-- Fin Datos Personales -->

</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- no se porque no puedo usar Assetic otra vez.. -->
    <script src="{{ asset('js/usuario/perfil/consultarUsuario.js') }}"></script>
{% endblock %}
