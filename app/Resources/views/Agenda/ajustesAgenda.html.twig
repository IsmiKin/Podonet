{% extends "::base.html.twig" %}

{% block title %}PodoNet - Ajustes Agenda{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet"  href="{{ asset('css/agenda/ajustes_agenda.css') }}"></link>
{% endblock %}

{% block iconoBanner %}calendar{% endblock %}
{% block tituloBanner %}Ajustes de Agenda{% endblock %}
{% block body %}


    {% form_theme form 'bootstrap_3_layout.html.twig' %}


    <!-- Formulario para resoluciones pequeÃ±as -->
    <div class="form-smallres">
        <button type="button" class="btn btn-primary nuevoGabineteButton" value="Nuevo" ><i class="fa fa-plus-circle"></i>  Nuevo Gabinete</button>

        <form method="POST" {{ form_enctype(form) }} action="{{ path('crear_gabinete') }}" class="form-gabinete" hidden="hidden" >
            {{ form_errors(form) }}
            {{ form_row(form.codigo) }}
            {{ form_row(form.localizacion) }}
            {{ form_row(form.tipo) }}
            {{ form_row(form.estado) }}
            <button type="submit" value="Crear" class="btn btn-success"><i class="fa fa-check"></i>  Crear Gabinete</button>
            <button type="button" value="Cancelar" class="btn btn-default cancelarGabineteForm"><i class="fa fa-undo"></i>  Cancelar</button>
        </form>
    </div>




<table class="table-gabinetes table table-condensed  footable" data-filter="#filtro" data-page-size="20" data-page-navigation=".pagination">
    <thead>
        <th>Codigo</th>
        <th>Localizacion</th>
        <th>Tipo</th>
        <th>Acciones</th>
    </thead>
    <tbody>

    {% for elemento in gabinetes %}
        <tr
                {% if elemento.Estado =="Activo" %}
                    class="success"
                {% elseif elemento.Estado =="Inactivo" %}
                    class="danger"
                {% elseif elemento.Estado == "Suspendido" %}
                    class ="warning"
                {% endif %}
            data-idGabinete="{{ elemento.idGabinete }}"
        >
            <td class="tdcodigo">{{ elemento.Codigo}}</td>
            <td class="tdlocalizacion">{{ elemento.Localizacion}}</td>
            <td class="tdtipo">{{ elemento.Tipo}}</td>
            <td class="tdacciones">
                <button class="btn btn-warning editarGabineteTabla" ><i class="fa fa-edit"></i></button>

                <span {% if elemento.Estado =="Activo" %} hidden="hidden" {% endif %}>
                    <button class="btn btn-success habilitarGabineteButton" data-habilitar="true"><i class="fa fa-check"></i></button>
                </span>
                <span {% if elemento.Estado =="Inactivo" %} hidden="hidden" {% endif %}>
                    <button class="btn btn-danger habilitarGabineteButton" data-habilitar="false" ><i class="fa fa-minus-circle"></i></button>
                </span>


            </td>
        </tr>
    {% endfor %}

    </tbody>
</table>

{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <!-- no se porque no puedo usar Assetic otra vez.. -->
    <script src="{{ asset('js/agenda/ajustes_agenda.js') }}"></script>
{% endblock %}

{% block templates %}
    {{ parent() }}
    <script src="{{ asset('templates/agenda/compiled_agenda.js') }}"></script>
{% endblock %}
